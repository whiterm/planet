#!/usr/bin/env bash

. $(dirname $0)/util
set -eu

: ${TARGET=releaser}
: ${OUTPUT=./build/planet}

if [ -n "$BUILDKIT_HOST" ] && buildctl --version >/dev/null 2>&1; then
  targetFlags=""
  if [ -n "$TARGET" ]; then
    targetFlags="--opt target=$TARGET"
  fi
  buildctlCmd build \
      $targetFlags \
      --frontend=dockerfile.v0 \
      --local context=. \
      --local dockerfile=. \
      --output="type=local,dest=$OUTPUT"
else
  targetFlags=""
  if [ -n "$TARGET" ]; then
    targetFlags="--target $TARGET"
  fi
  buildxCmd build \
    $targetFlags \
    --output="type=local,dest=$OUTPUT" \
    .
fi
